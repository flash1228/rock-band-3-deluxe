{push_back $dx_settings_main
   (dxState_Advanced
      (view
         os_ingame_hud
         os_track_hud
         os_menu_options
         os_quick_chat
         os_functional_options
         ;only show the controller menu when not in-game and only on applicable instruments or when faking is active
         {if_else {! {session is_in_game}} ;prevents soft-lock, swapping instrument type in-game would prevent player from rejoining
            os_controller
            0
         }
         {if_else {|| $dx_debug $dx_event_mode}
            os_debug
            0
         }
      )
      (select
         (os_ingame_hud {dx_state dxState_InGameHUD})
         (os_track_hud {dx_state dxState_TrackHUD})
         (os_menu_options {dx_state dxState_MenuOptions})
